# Force HTTPS and prepend www. to domain name
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.
RewriteRule ^(.*)$ https://www.sunreefrentals.com/$1 [R=301,L]

# Redirect index.php to root
RewriteCond %{THE_REQUEST} ^.*/index\.php
RewriteRule ^(.*)index.php$ /$1 [R=301,L]

# Redirect old pages
RewriteRule ^terms(/.*)?$ https://www.sunreefrentals.com/ [R=301,L]
RewriteRule ^book-now\.php$ https://www.sunreefrentals.com/reservation/ [R=301,L]
RewriteRule ^contact\.php$ https://www.sunreefrentals.com/contact/ [R=301,L]
RewriteRule ^confirmation\.php$ https://www.sunreefrentals.com/confirmation/ [R=301,L]
RewriteRule ^faq\.php$ https://www.sunreefrentals.com/faq/ [R=301,L]
RewriteRule ^about\.php$ https://www.sunreefrentals.com/about/ [R=301,L]